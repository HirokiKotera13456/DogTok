<h2 class="mt-3"><p>ワンちゃんの情報入力フォーム</p></h2>
  <%= form_with model: dog, local: true do |f| %>
    <div class="form-group py-3">
      <%= f.label :画像 %>
      <%= f.attachment_field :image, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :犬種 %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :説明 %>
      <%= f.text_area :caption, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :カテゴリー %>
      <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    <% end %>
    </div>
    
    
    
    <%= f.submit "投稿", class:"btn btn-success m-2" %>
  <% end %>