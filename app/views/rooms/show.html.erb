<div class="container mt-3">
  <div class="row">
    <div class="col-md-12 ">
          <p><%= link_to "ユーザー一覧に戻る", users_path,class:"btn btn-outline-info" %></p>
          <h2>チャートルーム</h2>
          <table class ="table">
            <thead>
              <tr>
                <th>
                  <% @entries.each do |e| %>
                    <a class="rooms-user-link" href="/users/<%= e.user.id %>"><%= e.user.name %>さん</a>
                  <% end %>
                </th>
              </tr>
              </thead>
              <tbody>
                <tr>
                  <td>
                      <% if @messages.present? %>
                        <% @messages.each do |m| %>
                          <%= m.content %><br>
                  </td>
                          <%= m.created_at.strftime("%m-%d %H:%M")%>
                        <% end %>
                      <% end %>
                  
                </tr>
              </tbody>
          </table>
                      <%= form_for @message do |f| %>
                        <%= f.text_field :content, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
                          <%= f.hidden_field :room_id, value: @room.id %>
                            <%= f.submit "投稿", class:"btn btn-success " %>
                      <% end %>
  
    </div>
  </div>
</div>
