<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
    <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<% @dogs.each do |dog| %>
<div>
  <%= link_to dog_path(dog.id) do %>
    <%= attachment_image_tag dog, :image, size: "300x300" %>
  <% end %>
  <p>犬種：<%= dog.name %></p>
  <p>ワンちゃんについて：<%= dog.caption %></p>
  <p>ユーザーネーム：<%= dog.user.name %></p>
</div>
<% end %>
