<% @users.each do |user| %>

<tr>
  <td><%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "40x40" %></td>
  <td><%= user.name %></td>
  <td><%= link_to "Show", user_path(user) %></td>
</tr>

<% if current_user.following?(user) %>
  <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
<% else %>
  <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
<% end %>

  フォロワー数
  <%= link_to user_followers_path(user) do %>
    <%= user.followers.count %>
  <% end %>

  フォロー数
   <%= link_to user_followings_path(user) do %>
      <%= user.followings.count %>
   <% end %>

<% end %>


