<% if dog.favorited_by?(current_user) %>
      <%= link_to dog_favorites_path(dog), method: :delete, remote: true do %>
        <i class="far fa-heart like-btn" ><%= dog.favorites.count %> いいね</i>
      <% end %>
    <% else %>
      <%= link_to dog_favorites_path(dog), method: :post, remote: true do %>
        <i class="far fa-heart unlike-btn" ><%= dog.favorites.count %> いいね</i>
      <% end %>
  <% end %>


